{% extends 'base.html.twig' %}

{% block title %}Elephant index{% endblock %}

{% block body %}
    <h1>Elephant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Color</th>
                <th>Weight</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for elephant in elephants %}
            <tr>
                <td>{{ elephant.id }}</td>
                <td>{{ elephant.color }}</td>
                <td>{{ elephant.weight }}</td>
                <td>{{ elephant.name }}</td>
                <td>
                    <a href="{{ path('app_elephant_show', {'id': elephant.id}) }}">show</a>
                    <a href="{{ path('app_elephant_edit', {'id': elephant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_elephant_new') }}">Create new</a>
{% endblock %}
